@model Web_Application.Models.Payment.PaymentViewModel
<link rel="stylesheet" href="/css/Other.css">
@{
    ViewData["Title"] = "Внести платеж";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h2 class="text-center">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <label asp-for="CreditId">Выберите кредит для пополнения</label>
                    <select asp-for="CreditId" class="form-control" asp-items="@(new SelectList(ViewBag.CreditList, "Value", "Text"))">
                        <option value="">-- Выбрать кредит --</option>
                    </select>
                    <span asp-validation-for="CreditId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Amount">Сумма</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                        </div>
                        <input asp-for="Amount" class="form-control" />
                    </div>
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Добавить платеж</button>
            </form>
        </div>
    </div>
</div>
    