@model Web_Application.Models.User.ManageUsersViewModel

@{
    ViewData["Title"] = "Просмотр пользователей";
}
<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
    <tr>
        <th>Уникальный номер клиента</th>
        <th>Никнейм</th>
        <!-- Add more columns for user attributes -->
        <th>Роли</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <!-- Add more columns for user attributes -->
            <td>
                <!-- Display user roles -->
                @foreach (var role in Model.UserRoles[user.Id])
                {
                    <span>@role</span>
                }
            </td>
            <td style="display: inline">
                <!-- Modify button -->
                <form asp-action="ModifyUser" asp-route-userId="@user.Id" method="post">
                    <button type="submit" class="btn btn-primary">Изменить</button>
                </form>

                <!-- Delete button -->
                <form asp-action="DeleteUser" asp-route-userId="@user.Id" method="post">
                    <button type="submit" class="btn btn-danger">Удалить</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>