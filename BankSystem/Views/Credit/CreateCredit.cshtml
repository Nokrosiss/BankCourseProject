@model Web_Application.Models.Credit.CreditViewModel;
<link rel="stylesheet" href="/css/Other.css">
@{
    ViewData["Title"] = "Заявка на кредит";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h2 class="text-center">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Amount">Желаемая сумма кредита (в случае оформления она будет увеличена на 10%)</label>
                    <input asp-for="Amount" class="form-control" title="Введите сумму от 10 тысяч до 10 миллионов" 
                           type="number" min="10000" max="10000000" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Passport">Паспортные данные (Серия Номер)</label>
                    <input type="text" asp-for="Passport" class="form-control" pattern="\d{4}\s\d{6}" title="Паспорт формата серия и номер - ****_******" />
                    <span asp-validation-for="Passport" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DocumentImage">Справка о доходах</label>
                    <input type="file" asp-for="DocumentImage" class="form-control" />
                    <span asp-validation-for="DocumentImage" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Причина для взятия кредита?</label>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="ReasonForCredit_HomePurchase" id="ReasonForCredit_HomePurchase" />
                        <label class="form-check-label" for="ReasonForCredit_HomePurchase">Покупка имущества</label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="ReasonForCredit_DebtConsolidation" id="ReasonForCredit_DebtConsolidation" />
                        <label class="form-check-label" for="ReasonForCredit_DebtConsolidation">Закрытие долгов</label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="ReasonForCredit_EmergencyExpense" id="ReasonForCredit_EmergencyExpense" />
                        <label class="form-check-label" for="ReasonForCredit_EmergencyExpense">Срочная покупка</label>
                    </div>
                </div>

                <!-- Add similar styling adjustments for the other questions -->

                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="AcceptTerms" id="AcceptTerms" required/>
                        <label class="form-check-label" for="AcceptTerms">Я соглашаюсь на обработку данных и о работе коллекторов!</label>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Оформить кредит</button>
            </form>
        </div>
    </div>
</div>
